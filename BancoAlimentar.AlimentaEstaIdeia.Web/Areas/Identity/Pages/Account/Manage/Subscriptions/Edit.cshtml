@page
@model BancoAlimentar.AlimentaEstaIdeia.Web.Areas.Identity.Pages.Account.Manage.Subscriptions.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutSubscription";
}

<h1>Edit</h1>

<h4>Subscription</h4>
<hr />
<div class="row">
	<div class="col-md-8">
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Subscription.Created)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Subscription.Created)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Subscription.StartTime)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Subscription.StartTime)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.Subscription.SubscriptionType)
			</dt>
			<dd class="col-sm-4">
				@Html.DisplayFor(model => model.Subscription.SubscriptionType)
			</dd>
		</dl>
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Subscription.Id" />
			<div class="form-group">
				<label asp-for="Subscription.ExpirationTime" class="control-label"></label>
				<input format="dd/mm/yyyy" asp-for="Subscription.ExpirationTime" class="form-control" />
				<span asp-validation-for="Subscription.ExpirationTime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>

			@Html.ValidationSummary()
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
