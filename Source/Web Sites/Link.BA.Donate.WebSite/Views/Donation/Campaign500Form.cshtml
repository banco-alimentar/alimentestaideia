@{
    Layout = null;
}
@model Link.BA.Donate.WebSite.Models.RecruitmentViewModel

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
<title>Campanha 500</title><link href="../../Content/SiteRemax.css" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    
</head>
<body>
 @using (Html.BeginForm("Campaign500Confirm", "Donation", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <table align="center" width="520" height="688" cellpadding="0" cellspacing="0" border="0" style="background-image:url('@Url.Content("~/Content/images/bg_500.jpg")'); background-repeat:no-repeat;">
            <tr>
                <td valign="top">

                    <table cellpadding="0" cellspacing="0" border="0">
                        <tr>
                            <td colspan="2" height="220"></td>
                        </tr>
                        <tr>
                            <td width="35"></td>
                            <td>
                            
							    <table width="200" cellpadding="0" cellspacing="0" border="0">
                                    <tr>
                                        <td colspan="2" class="normalText">Regista-te, recomenda os nossos serviços aos teus amigos e ganha 500 €!</td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" height="10"></td>
                                    </tr>
                                    <tr>
                                        <td class="smallTextB"><b>NOME</b></td>
                                        <td>@Html.EditorFor(m => m.Name, new { @class = "recruitmentForm" })</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" height="3"></td>
                                    </tr>
                                    <tr>
                                        <td class="smallTextB"><b>EMAIL</b></td>
                                        <td>@Html.EditorFor(m => m.Email, new { @class = "recruitmentForm" })</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" height="3"></td>
                                    </tr>
                                    <tr>
                                        <td class="smallTextB"><b>TELEFONE</b>&nbsp;&nbsp;</td>
                                        <td>@Html.EditorFor(m => m.Phone, new { @class = "recruitmentForm" })</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" height="5"></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td><input type="image" src="@Url.Content("~/Content/images/register_500.jpg")" style="height:34px;width:136px;" /></td>
                                    </tr>
                                </table>
                            
                            </td>
                        </tr>
                    </table>
            </tr>
        </table>
}
</body>
</html>
