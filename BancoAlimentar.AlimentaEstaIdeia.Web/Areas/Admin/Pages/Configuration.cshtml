@page
@model BancoAlimentar.AlimentaEstaIdeia.Web.Areas.Admin.Pages.ConfigurationModel
@{
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Key 
            </th>
            <th>
                Value
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ActualConfiguration) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>            
        </tr>
}
    </tbody>
</table>
