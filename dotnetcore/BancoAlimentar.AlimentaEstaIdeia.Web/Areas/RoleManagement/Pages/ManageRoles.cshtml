@page
@model BancoAlimentar.AlimentaEstaIdeia.Web.Areas.RoleManagement.Pages.ManageRolesModel
@{
}
<form method="post" asp-page="ManageRoles" asp-page-handler="Save">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @Model.Name.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.ManageUserRolesViewModels.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.ManageUserRolesViewModels[i].RoleId" />
                    <input type="hidden" asp-for="@Model.ManageUserRolesViewModels[i].RoleName" />
                    <input asp-for="@Model.ManageUserRolesViewModels[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.ManageUserRolesViewModels[i].Selected">
                        @Model.ManageUserRolesViewModels[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <input type="hidden" name="userId" value="@Model.UserId" />
            <a asp-page="UserRoles" asp-route-id="@Model.UserId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>