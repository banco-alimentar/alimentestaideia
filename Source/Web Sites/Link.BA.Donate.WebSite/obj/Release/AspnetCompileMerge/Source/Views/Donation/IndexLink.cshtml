    <script language="javascript" type="text/javascript">
        function Update() {
             $.ajax({
                url: '@Url.Action("GetTotalDonations", "Donation")',
                cache: false,
                success: function (data) {
                    var result = '<div class="blankLine"></div><div class="blankLine"></div><div class="blankLine"></div><div class="blankLine"></div>';
                    for (var i in data) result += '<div class="centerDonationItem"><img width="80" src="/Content/images_/' + data[i].IconUrl + '" />&nbsp;&nbsp;&nbsp;' + data[i].Total.toFixed((typeof(data[i].Total)=='number') && (data[i].Total.toString().indexOf('.')==-1) ? 0 : 3) + ' ' + data[i].UnitOfMeasure + '</div>';
                    $('.statusCallout').html(result);
                },
                error: function (xhr, status, error) {
                    //$('#totalDonations').append(xhr.responseText);
                }
            });
            
            $.ajax({
                url: '@Url.Action("GetLastPaidDonations", "Donation")',
                cache: false,
                success: function (data) {
                    //alert();
                    var result = '';
                    for (var i in data) result += '<div class="donatorPic1"><img width="45" height="45" src="/Donation/DisplayImage/?donorId='+data[i].DonorId+'" title="'+data[i].Name+'"/></div>';
                    $('.donatorWall').html("");
                    $('.donatorWall').html(result);
                },
                error: function (xhr, status, error) {
                    //$('.donatorWall').append(xhr.responseText);
                }
            });
        }
        //.appear_randomly

        var amounts = new Array();
        var ids = new Array();
        var totalProducts = 0;
        var refreshTime = @ViewBag.RefreshTime;
        setInterval('Update();', refreshTime*1000);
    </script>


