	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				@{
					var foodBankId = -1;
					if (@HttpContextAccessor.HttpContext.Session.Keys.Contains("FoodBankIdContext"))
					{
						foodBankId=(int)@HttpContextAccessor.HttpContext.Session.GetInt32("FoodBankIdContext");
					}

					if (foodBankId == -1)
					{
						<a class="navbar-brand" asp-area="" asp-page="/Index">Alimente esta ideia</a>
					}
					else if (foodBankId == 22)
					{
						<a class="navbar-brand" asp-area="" asp-page="/CaboVerde">Alimente esta ideia</a>
					}
					else if (foodBankId == 24)
					{
						<a class="navbar-brand" asp-area="" asp-page="/Angola">Alimente esta ideia</a>
					}
					else 
					{
						<a class="navbar-brand" asp-area="" asp-page="/Index">Alimente esta ideia</a>
					}
