@page
@model BancoAlimentar.AlimentaEstaIdeia.Web.Areas.Identity.Pages.Account.Manage.CampaignEditModel
@inject IHtmlLocalizer<CampaignDetailModel> CompaignLocalizer
@{ }

<h1>Edit</h1>
<h4>Subscription</h4>
<div class="row">
	<div class="col-md-8">
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Referral.Code)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Referral.CreateDate)
			</dd>
		</dl>
		</dl>
		<hr />
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Referral.Id" />
			<input type="hidden" asp-for="Referral.Code" />
			<div class="form-group">
				<label asp-for="Referral.Name" class="control-label"></label>
				<input asp-for="Referral.Name" class="control-label"/>
			</div>
			<div class="form-group">
				<label asp-for="Referral.Active" class="control-label"></label>
				<input asp-for="Referral.Active" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Referral.IsPublic" class="control-label"></label>
				<input asp-for="Referral.IsPublic" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>

			@Html.ValidationSummary()
		</form>
	</div>
</div>

<div>
	<a asp-page="./CampaignsHistory">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
