@Html.ActionLink("Voltar", "Index")

@{
    ViewBag.Title = "ProcessFile";
}

@using (Html.BeginForm("ValidateFile", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" />
    <input type="submit" value="Validar" />
}

<pre>@ViewBag.Report</pre>

@using (Html.BeginForm("ProcessFile", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="file" value="@ViewBag.File"/>
    <input type="submit" value="Processar" />
}