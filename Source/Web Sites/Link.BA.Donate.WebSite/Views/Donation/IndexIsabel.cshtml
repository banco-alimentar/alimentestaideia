@model Link.BA.Donate.WebSite.Models.DonateViewModel
<div class="janela-fora" id="formulario-doacao">
    
    <div class="janela"><table border="0" align="center" cellpadding="0" cellspacing="0"><table><tr><td>

    @using (Html.BeginForm("Donate", "Donation", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
            
        @Html.RadioButton("Private", "true", true)
        @Html.RadioButton("Private", "false", false)
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name, new { MAXLENGTH = 256 })

        @Html.LabelFor(m => m.Address)
        @Html.EditorFor(m => m.Address, new { MAXLENGTH = 256 })

        @Html.LabelFor(m => m.PostalCode)
        @Html.EditorFor(m => m.PostalCode, new { MAXLENGTH = 20, style = "width:89px" })

        @Html.LabelFor(m => m.Country)
        @Html.EditorFor(m => m.Country, new { MAXLENGTH = 256 })

        @Html.LabelFor(m => m.Email)
        @Html.EditorFor(m => m.Email, new { MAXLENGTH = 128 })
                        
        @Html.LabelFor(m => m.Nif)
        @Html.EditorFor(m => m.Nif, new { MAXLENGTH = 9 })

        @Html.LabelFor(m => m.Picture)<INPUT id="picture" size="5" type="file" name="picture"/>

        @CaptchaMVC.HtmlHelpers.CaptchaHelper.Captcha(Html, 6)

                        
        @Html.HiddenFor(m => m.Amount, new { @Value = "0" })
        @Html.HiddenFor(m => m.DonatedItems)
                

        <input type="image" src="@Url.Content("~/Content/images/b_enviar.png")" value="Doar" />
        @Html.ValidationSummary()
    }


    </td></tr>
</table>
</div></div>