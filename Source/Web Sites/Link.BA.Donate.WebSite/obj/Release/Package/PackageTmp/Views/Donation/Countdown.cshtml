@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<!--script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script-->
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <script language="Javascript" type="text/javascript" src="@Url.Content("~/Scripts/jquery.lwtCountdown-1.0.js")"></script>
	<script language="Javascript" type="text/javascript" src="@Url.Content("~/Scripts/misc.js")"></script>
    <script language="Javascript" type="text/javascript" src="@Url.Content("~/Scripts/jquery.lightbox-0.5.min.js")"></script>
    <script language="Javascript" type="text/javascript" src="@Url.Content("~/Scripts/jquery.lightbox-0.5.pack.js")"></script>

    <script language="Javascript" type="text/javascript" src="@Url.Content("~/Scripts/jquery.dimensions.min.js")"></script>
    <script language="Javascript" type="text/javascript" src="@Url.Content("~/Scripts/jquery.tooltip.min.js")"></script>
    <script language="Javascript" type="text/javascript" src="@Url.Content("~/Scripts/jquery.tooltip.pack.js")"></script>

    <link href="@Url.Content("~/Content/main.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jCallout.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.lightbox-0.5.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/Content/jquery.tooltip.css")" rel="stylesheet" type="text/css" />

	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

	<title>Alimente esta ideia, também online!</title>
</head>

<body>
    <div id="fb-root"></div>
    <script>
    (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/pt_PT/sdk.js#xfbml=1&version=v3.2';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
    <div id="countdown_container" class="countdown_container">

        <h1>www.alimentestaideia.pt</h1>
        <h2 class="subtitle">@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Titulo")</h2>

        <!-- Countdown dashboard start -->
        <div id="countdown_dashboard">

            <div class="dash weeks_dash">
                <span class="dash_title">@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Semanas")</span>
                <div class="digit">0</div>
                <div class="digit">0</div>
            </div>

            <div class="dash days_dash">
                <span class="dash_title">@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Dias")</span>
                <div class="digit">0</div>
                <div class="digit">0</div>
            </div>

            <div class="dash hours_dash">
                <span class="dash_title">@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Horas")</span>
                <div class="digit">0</div>
                <div class="digit">0</div>
            </div>

            <div class="dash minutes_dash">
                <span class="dash_title">@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Minutos")</span>
                <div class="digit">0</div>
                <div class="digit">0</div>
            </div>

            <div class="dash seconds_dash">
                <span class="dash_title">@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Segundos")</span>
                <div class="digit">0</div>
                <div class="digit">0</div>
            </div>

        </div>
        <!-- Countdown dashboard end -->

        <div class="countdown_logo"><img width="285" src="@Url.Content("~/Content/images_/ba_logo_1.png")" /></div>

        <div class="videoArea"><div class="fb-video" data-href="https://www.facebook.com/bancoalimentar/videos/923055534549927/" data-show-text="false">
            <blockquote cite="https://www.facebook.com/bancoalimentar/videos/923055534549927/" class="fb-xfbml-parse-ignore">
                <a href="https://www.facebook.com/bancoalimentar/videos/923055534549927/">A cadeia alimentar começa em si!</a><p>
                    Sabia que há uma cadeia alimentar que começa em si? É simples, a Inês Lopes Gonçalves explica-lhe.

                    Ajude e deixe a sua marca em www.alimentestaideia.pt
                </p>Publicado por <a href="https://www.facebook.com/bancoalimentar/">Banco Alimentar Contra a Fome</a> em Segunda-feira, 3 de dezembro de 2018
            </blockquote>
        </div>
        </div>
        <div class="comentArea">@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Descricao1")<br /><br />@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Descricao2")<br /><br />@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Descricao3")<br /><br />@HttpContext.GetLocalResourceObject("~/Views/Donation/Countdown.cshtml", "Descricao4")</div>

        <div class="photoArea" id="photoGallery">

            <a href="@Url.Content("~/Content/images_/corredor.jpg")" target="_blank"><img border="0" width="110" height="83" src="@Url.Content("~/Content/images_/corredor_thumb.jpg")" /></a>
            <a href="@Url.Content("~/Content/images_/senhores.jpg")" target="_blank"><img border="0" width="110" height="83" src="@Url.Content("~/Content/images_/senhores_thumb.jpg")" /></a>
            <a href="@Url.Content("~/Content/images_/meninas.jpg")" target="_blank"><img border="0" width="110" height="83" src="@Url.Content("~/Content/images_/meninas_thumb.jpg")" /></a>
            <a href="@Url.Content("~/Content/images_/azeite.jpg")" target="_blank"><img border="0" width="110" height="83" src="@Url.Content("~/Content/images_/azeite_thumb.jpg")" /></a>
            <a href="@Url.Content("~/Content/images_/oleo.jpg")" target="_blank"><img border="0" width="110" height="83" src="@Url.Content("~/Content/images_/oleo_thumb.jpg")" /></a>

        </div>

        <div class="dev_comment">Campanha criada pela <a href="http://www.link.pt" target="_blank">Link Consulting</a> em parceria com <a href="http://www.microsoft.pt" target="_blank">Microsoft Portugal</a> para o <a href="http://www.bancoalimentar.pt" target="_blank">Banco Alimentar Contra a Fome</a>.</div>

        <script language="javascript" type="text/javascript">
		    jQuery(document).ready(function () {
		        $('#countdown_dashboard').countDown({
		            targetDate: {
		                'day': 22,
		                'month': 5,
		                'year': 2019,
		                'hour': 23,
		                'min': 59,
		                'sec': 59
		            }
		        });
		    });

		    $(function () {
		        $('#photoGallery a').lightBox(
                {
                    imageLoading: '@Url.Content("~/Content/images_/lightbox-btn-loading.gif")',
                    imageBtnClose: '@Url.Content("~/Content/images_/lightbox-btn-close.gif")',
                    imageBtnPrev: '@Url.Content("~/Content/images_/lightbox-btn-prev.gif")',
                    imageBtnNext: '@Url.Content("~/Content/images_/lightbox-btn-next.gif")',
                    fixedNavigation: true,
                    txtImage: 'Imagem',
                    txtOf: 'de'
                }
                    );
		    });


        </script>

    </div>

</body>

</html>